<h1>Users list</h1>

<table>
  <thead>
    <tr>
      <th>
        Account number
      </th>
      <th>
        Day trader
      </th>
      <th>
        Option level
      </th>
      <th>
        Account type
      </th>
      <th>
        Last update
      </th>
      <th>
        Name
      </th>
      <th>
        Status
      </th>
      <th>
        Classification
      </th>
      <th colspan="3">
        Actions
      </th>
    </tr>
  </thead>
  <tbody>
    {{#each model as |user|}}
      <tr>
        <td>
          {{user.accountNumber}}
        </td>
        <td>
          {{user.dayTrader}}
        </td>
        <td>
          {{user.optionLevel}}
        </td>
        <td>
          {{user.accountType}}
        </td>
        <td>
          {{user.lastUpdate}}
        </td>
        <td>
          {{user.name}}
        </td>
        <td>
          {{user.status}}
        </td>
        <td>
          {{user.classification}}
        </td>
        <td>
          {{link-to "Show" "users.show" user}}
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>
