<h1>Option-chains list</h1>

<p>
  {{link-to "New Option-chain" "option-chains.new" }}
</p>

{{#if model.length}}
  <table>
    <thead>
      <tr>
        <th>
          Stock
        </th>
        <th colspan="3">
          Actions
        </th>
      </tr>
    </thead>
    <tbody>
      {{#each model as |option-chain|}}
        <tr>
          <td>
            {{option-chain.stock}}
          </td>
          <td>
            {{link-to "Edit" "option-chains.edit" option-chain}}
          </td>
          <td>
            {{link-to "Show" "option-chains.show" option-chain}}
          </td>
          <td>
            <a href="#" {{action "remove" option-chain}}>Remove</a>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
{{else}}
  <p id="blankslate">
    No Option-chains found
  </p>
{{/if}}
