<h1>Users list</h1>

<p>
  {{link-to "New User" "users.new" }}
</p>

{{#if model.length}}
  <table>
    <thead>
      <tr>
        <th>
          Id
        </th>
        <th>
          Account number
        </th>
        <th>
          Day trader
        </th>
        <th>
          Option level
        </th>
        <th>
          Type
        </th>
        <th>
          Name
        </th>
        <th>
          Status
        </th>
        <th>
          Classification
        </th>
        <th>
          Last update
        </th>
        <th colspan="3">
          Actions
        </th>
      </tr>
    </thead>
    <tbody>
      {{#each model as |user|}}
        <tr>
          <td>
            {{user.id}}
          </td>
          <td>
            {{user.accountNumber}}
          </td>
          <td>
            {{user.dayTrader}}
          </td>
          <td>
            {{user.optionLevel}}
          </td>
          <td>
            {{user.type}}
          </td>
          <td>
            {{user.name}}
          </td>
          <td>
            {{user.status}}
          </td>
          <td>
            {{user.classification}}
          </td>
          <td>
            {{user.lastUpdate}}
          </td>
          <td>
            {{link-to "Edit" "users.edit" user}}
          </td>
          <td>
            {{link-to "Show" "users.show" user}}
          </td>
          <td>
            <a href="#" {{action "remove" user}}>Remove</a>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
{{else}}
  <p id="blankslate">
    No Users found
  </p>
{{/if}}
