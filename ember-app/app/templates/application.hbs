{{!-- Page Header --}}
<header>
  <div class="navbar-fixed">
    <nav class="page-nav indigo darken-4">
      <div class="nav-wrapper">
        <div class="container-fluid">
          <a href="#!" class="brand-logo white-text">
            <img class="ember-logo hide-on-med-and-down" src="images/ember-white.svg" />
            Odin Tradier
          </a>
          <a href="#" data-activates="mobile-nav" class="button-collapse button-collapse indigo-text text-darken-2">
            <i class="mdi-navigation-menu"></i>
          </a>
        </div>
      </div>
    </nav>
  </div>
</header>

{{!-- Left Nav links --}}
<ul class="side-nav fixed page-submenu" id="mobile-nav">
  {{#each navSections as |section|}}
    {{#link-to section.route activeClass='active' tagName='li'}}
      {{#link-to section.route}}
        {{section.name}}
        {{#if section.new}}
          {{#md-badge class='indigo lighten-1 new-badge right white-text'}}New{{/md-badge}}
        {{/if}}
      {{/link-to}}
    {{/link-to}}
  {{/each}}
</ul>

{{!-- Main page body --}}
<main class="site-content">
  {{outlet}}
</main>

{{!-- Modals on the page --}}
{{md-modal-container}}

{{!-- Footer bar --}}
<footer class="page-footer footer indigo darken-2">
  {{#md-copyright text='Copyright Text' startYear=2015}}
    <a class="grey-text text-lighten-4 right" href="#!">
      More Links
    </a>
  {{/md-copyright}}
</footer>
