<h1>Option-expirations list</h1>

<p>
  {{link-to "New Option-expiration" "option-expirations.new" }}
</p>

{{#if model.length}}
  <table>
    <thead>
      <tr>
        <th>
          Date
        </th>
        <th>
          Stock
        </th>
        <th colspan="3">
          Actions
        </th>
      </tr>
    </thead>
    <tbody>
      {{#each model as |option-expiration|}}
        <tr>
          <td>
            {{option-expiration.date}}
          </td>
          <td>
            {{option-expiration.stock}}
          </td>
          <td>
            {{link-to "Edit" "option-expirations.edit" option-expiration}}
          </td>
          <td>
            {{link-to "Show" "option-expirations.show" option-expiration}}
          </td>
          <td>
            <a href="#" {{action "remove" option-expiration}}>Remove</a>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
{{else}}
  <p id="blankslate">
    No Option-expirations found
  </p>
{{/if}}
